<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Order number</th>
      <th>Total</th>
      <th>Payment type</th>
      <th>Status</th>
      <th>Shipping fee</th>
      <th>Tax fee</th>
      <th>Token key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user %></td>
        <td><%= order.order_number %></td>
        <td><%= order.total %></td>
        <td><%= order.payment_type %></td>
        <td><%= order.status %></td>
        <td><%= order.shipping_fee %></td>
        <td><%= order.tax_fee %></td>
        <td><%= order.token_key %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

