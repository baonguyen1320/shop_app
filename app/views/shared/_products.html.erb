<% @products.each do |product| %>
    <div class="col s12 m6 l3">
      <%= link_to category_product_path(product.category, product) do %>
        <div class="card z-depth-2">
          <div class="card-image">
            <%= image_tag "car.jpg" %>
          </div>
          <div class="card-content">
            <span class="card-title"><%= product.name %></span>
            <p><%= product.content.html_safe %></p>
          </div>
      <% end %>  
          <div class="card-action">
            <div class="row">
              <div class="col s6 l4"><%= product.price %></div>
              <div class="col s6 l8"><a href="#" class="waves-effect waves-light btn right">Add to cart</a></div>
            </div>
          </div>
        </div>
    </div>
  <% end %>