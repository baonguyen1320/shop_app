<div id="leftpanel">
  <div class="card">
    <ul>
      <% Category.all.includes(:parent, :child).sort_by { |e| e[:order] }.each do |category| %>
        <% if category.parent.blank? %>
          <%= render 'shared/sub_category', category: category %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>